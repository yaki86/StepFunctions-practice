{
  "version": "0.2",
  "phases": {
    "install": {
      "commands": [
        "pip3 install --no-cache-dir pytest pytest-html pytest-metadata pytest-playwright playwright",
        "playwright install --with-deps chromium"
      ]
    },
    "build": {
      "commands": [
        "pytest tests/test_pw.py -s --junitxml=test-results/junit.xml",
        "pytest tests/test_pw.py -v --junitxml=test-results/junit.xml",
        "pytest tests/test_pw.py -s -v --junitxml=test-results/junit.xml"
      ]
    }
  },
  "reports": {
    "sfn-reports": {
      "files": [
        "test-results/junit.xml"
      ],
      "file-format": "JUNITXML"
    }
  }
}